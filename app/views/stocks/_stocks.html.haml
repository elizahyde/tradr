%table
  %tr
    %th Stock
    %th Price
    %th Quantity
    %th Current Stock Price
    %th

  - current_user.stocks.each do |stock|
    %tr
      %td= stock.symbol
      %td= stock.starting_price
      %td= stock.quantity
      %td= @stocks[:AAPL][:price]
      %td= link_to 'Edit', edit_stock_path(stock)
      %td= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' }