= form_for @stock, :remote => true do |f|
  - if @stock.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this stock from being saved:"
      %ul
        - @stock.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :symbol
    = f.text_field :symbol
  .field
    = f.label :quantity
    = f.number_field :quantity

  .actions
    = f.submit 'Save'